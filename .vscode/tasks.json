{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"windows": {
				"command": "meson compile"
			},
			"linux": {
				"command": "meson compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/build_w64_release"
			},
			"problemMatcher": "$gcc",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build debug",
			"type": "shell",
			"windows": {
				"command": "meson compile"
			},
			"linux": {
				"command": "meson compile"
			},
			"options": {
				"cwd": "${workspaceFolder}/build_w64_debug"
			},
			"problemMatcher": "$gcc",
			"group": "build"
		}
	]
}